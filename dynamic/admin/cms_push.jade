    style
        :stylus
            .cms_push
                .row:first-of-type
                    margin-top 42px
            .roInput
                input
                    color #222222!important
                label
                    color #9e9e9e!important
    script.
        jQuery(function(){
            $('.datepicker').pickadate({
                selectMonths: true,
                selectYears: 10
            })

            $('.cms_push_enter').click(function() {
                var i = []
                var j = 0

                $('.cms_push_input input').each(function () {
                    i[j] = $(this).val()
                    if(i[j]==""){
                        $('.cms_push_input input').eq(j).addClass("invalid")
                        $(".cms_push_res").html("请填写完整信息。")
                    }
                    j++


                })
            })
        })

