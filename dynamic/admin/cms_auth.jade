            .cms_auth
                .yahei
                    font-family "Microsoft YaHei"!important
                .cms_auth_input
                    margin-top 24%
                    .card
                        input
                            display block
                            font-size 16px
                            font-weight 300
                            width 100%
                            height 45px
                            margin 0
                            padding 0 45px 0 15px
                            border 0
