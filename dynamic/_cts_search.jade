style
    :stylus
        #ctView
            margin 0 auto
            width 480pt
            p
                font-family "Microsoft YaHei"
            .resTab
                margin 0 auto
                border:none
                border-collapse:collapse
                tr
                    height 12pt
                p
                    margin 3px auto
            .resTd1
                width:14.0cm
                border:none
                p
                    font-size 12pt
                    font-weight bold
            .resTr2
            .resTr5
                height 18pt
                td
                    width:14.0cm
                    border:none
                    height 18pt
                p
                    text-align:right
                    font-size 10pt
            .resTr2
                border-bottom: solid 1.0pt #32CD32
            .resTd3
                background: #32CD32
                width:70pt;
                border:solid 1.0pt #32CD32
                border-top:none
                p
                    font-size 12pt
                    font-weight bold
                    color #FFF
            .resTd4
                width:160pt;
                border-top:none;
                border-left:none;
                border-bottom:solid 1.0pt #32CD32
                border-right:solid 1.0pt #32CD32
                p
                    font-size 12pt

#ctView
